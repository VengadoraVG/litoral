var zOrder = (function () {
  var order = [],
      nLayers = 6,
      i;

  for (i=0; i<nLayers; i++) {
    order.push([]);
  }
  
  return {
    order : order,
    HIDDEN : 0,
    SKY : 1,
    MOUNTAINS : 2,
    FLOOR : 3,
    ACTION : 4,
    FRONT : 5,
    INTERFACE : 6,

    sort : function () {
      var i, j;

      for (i=0; i<order.length; i++) {
        for (j=0; j<order[i].length; j++) {
          order[i][j].bringToTop();
        }
      }

    },

    putInLayer : function (sprite, layerKey) {
      this.order[this[layerKey]].push(sprite);
    }
  };
})();
